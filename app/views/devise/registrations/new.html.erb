<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :age %><br />
    <%= f.text_field :age, list: "age-options" %> лет
      <datalist id="age-options">
        <% (7..100).each do |age| %>
          <option value="<%= age %>"><%= age %></option>
        <% end %>
      </datalist>
  </div>
  
  <div class="field">
    <%= f.label :weight %><br />
    <%= f.text_field :weight, list: "weight-options" %> кг
      <datalist id="weight-options">
        <% (20..200).each do |weight| %>
          <option value="<%= weight %>"><%= weight %></option>
        <% end %>
      </datalist>
  </div>
  
  <div class="field">
    <%= f.label :height %><br />
    <%= f.text_field :height, list: "height-options" %> см
      <datalist id="height-options">
        <% (100..220).each do |height| %>
        <option value="<%= height %>"><%= height %></option>
        <% end %>
      </datalist>
  </div>
  
  <div class="field">
    <%= f.label :gender %><br />
    <%= f.radio_button :gender, 'male' %> Male
    <%= f.radio_button :gender, 'female' %> Female
  </div>

  <div class="field">
    <%= f.label :goal, "Цель" %><br />
    <%= f.select :goal, options_for_select(User::GOALS.map { |goal| [goal.capitalize, goal] }) %>
  </div>

  <div class="field">
    <%= f.label :mobility, "Подвижность" %><br />
    <% mobility_options = [
          ['Очень низкая подвижность (сидячий образ жизни)', 1],
          ['Низкая подвижность (небольшая физическая активность)', 2],
          ['Средняя подвижность (регулярные занятия спортом)', 3],
          ['Высокая подвижность (активный образ жизни)', 4],
          ['Очень высокая подвижность (интенсивные тренировки)', 5]
        ] %>
    <%= f.select :mobility, options_for_select(mobility_options) %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
